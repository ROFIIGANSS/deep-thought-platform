# Agent Platform Environment Configuration
# Copy this file to `.env` and adjust values as needed

# Consul Configuration
CONSUL_HOST=consul
CONSUL_PORT=8500

# MCP Router (gRPC) Configuration
MCP_ROUTER_PORT=50051

# gRPC Router Client Settings (services that call the router)
GRPC_ROUTER_HOST=haproxy
GRPC_ROUTER_PORT=50051

# MCP Server (Cursor IDE integration)
MCP_TRANSPORT=sse
MCP_PORT=3000

# Catalog API (FastAPI backend)
CATALOG_API_HOST=localhost
CATALOG_API_PORT=8000

# Catalog UI (frontend)
CATALOG_UI_HOST=localhost
CATALOG_UI_PORT=80

# Agent / Tool / Worker default ports (inside containers)
AGENT_PORT=50052
TOOL_PORT=50053
WORKER_PORT=50054

# General Settings
LOG_LEVEL=INFO
